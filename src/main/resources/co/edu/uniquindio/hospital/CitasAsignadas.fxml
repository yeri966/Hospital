<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="870.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.hospital.controllers.CitasAsignadasController">

    <children>
        <!-- TÍTULO -->
        <Label layoutX="30.0" layoutY="20.0" text="Mis Citas Asignadas" textFill="#424242">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="55.0" text="Listado de citas programadas para atención" textFill="#757575">
            <font>
                <Font size="13.0" />
            </font>
        </Label>

        <Separator layoutX="30.0" layoutY="85.0" prefWidth="810.0" />

        <!-- ESTADÍSTICAS -->
        <HBox layoutX="30.0" layoutY="105.0" spacing="20.0">
            <children>
                <VBox alignment="CENTER" prefHeight="70.0" prefWidth="180.0" spacing="5.0"
                      style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <children>
                        <Label text="Total de Citas" textFill="#757575">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblTotalCitas" text="0" textFill="#424242">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </VBox>

                <VBox alignment="CENTER" prefHeight="70.0" prefWidth="180.0" spacing="5.0"
                      style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <children>
                        <Label text="Citas Hoy" textFill="#757575">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblCitasHoy" text="0" textFill="#424242">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </VBox>

                <VBox alignment="CENTER" prefHeight="70.0" prefWidth="180.0" spacing="5.0"
                      style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <children>
                        <Label text="Próximas Citas" textFill="#757575">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblProximasCitas" text="0" textFill="#424242">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>

        <Separator layoutX="30.0" layoutY="195.0" prefWidth="810.0" />

        <!-- TABLA DE CITAS -->
        <Label layoutX="30.0" layoutY="210.0" text="Mis Citas Programadas" textFill="#424242">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <TableView fx:id="tablaCitasAsignadas" layoutX="30.0" layoutY="240.0" prefHeight="400.0" prefWidth="810.0"
                   style="-fx-border-color: #e0e0e0; -fx-border-width: 1;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha" />
                <TableColumn fx:id="colHora" prefWidth="80.0" text="Hora" />
                <TableColumn fx:id="colPaciente" prefWidth="180.0" text="Paciente" />
                <TableColumn fx:id="colDocumento" prefWidth="100.0" text="Documento" />
                <TableColumn fx:id="colTelefono" prefWidth="100.0" text="Teléfono" />
                <TableColumn fx:id="colMotivo" prefWidth="190.0" text="Motivo" />
            </columns>
        </TableView>

        <!-- BOTÓN VER DETALLE -->
        <Button fx:id="btnVerDetalle" layoutX="720.0" layoutY="655.0" mnemonicParsing="false" onAction="#onVerDetalle"
                prefHeight="35.0" prefWidth="120.0"
                style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"
                text="Ver Detalle">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
    </children>
</AnchorPane>