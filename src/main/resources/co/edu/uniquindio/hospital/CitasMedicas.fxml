<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="870.0" style="-fx-background-color: #f8fafc;"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.hospital.controllers.CitasMedicasController">

    <children>
        <!-- TÍTULO -->
        <Label layoutX="30.0" layoutY="20.0" text="Mis Citas Asignadas" textFill="#1e293b">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Separator layoutX="30.0" layoutY="55.0" prefWidth="810.0" />

        <!-- TABLA DE CITAS -->
        <TableView fx:id="tablaCitas" layoutX="30.0" layoutY="75.0" prefHeight="540.0" prefWidth="810.0"
                   style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 2; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colFecha" prefWidth="95.0" text="Fecha" />
                <TableColumn fx:id="colHora" prefWidth="70.0" text="Hora" />
                <TableColumn fx:id="colPaciente" prefWidth="200.0" text="Paciente" />
                <TableColumn fx:id="colDocumento" prefWidth="110.0" text="Documento" />
                <TableColumn fx:id="colMotivo" prefWidth="175.0" text="Motivo" />
                <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            </columns>
        </TableView>

        <!-- BOTONES DE ACCIÓN -->
        <HBox layoutX="30.0" layoutY="630.0" spacing="12.0">
            <children>
                <Button fx:id="btnAtenderCita" mnemonicParsing="false" onAction="#onAtenderCita"
                        prefHeight="35.0" prefWidth="150.0"
                        text="Atender Cita">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="btnAgregarDiagnostico" mnemonicParsing="false" onAction="#onAgregarDiagnostico"
                        prefHeight="35.0" prefWidth="180.0"
                        text="Agregar Diagnóstico">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="btnCancelarCita" mnemonicParsing="false" onAction="#onCancelarCita"
                        prefHeight="35.0" prefWidth="150.0"
                        text="Cancelar Cita">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>