<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="870.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.hospital.controllers.GestionPacientesController">

    <children>
        <!-- TÍTULO -->
        <Label layoutX="30.0" layoutY="20.0" text="Gestión de Pacientes" textFill="#424242">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Separator layoutX="30.0" layoutY="55.0" prefWidth="810.0" />

        <!-- FORMULARIO -->
        <GridPane layoutX="30.0" layoutY="75.0" hgap="15.0" vgap="12.0" prefWidth="810.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="220.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="220.0" />
            </columnConstraints>

            <!-- Fila 1: ID y Documento -->
            <Label text="ID:" textFill="#424242" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <TextField fx:id="txtId" editable="false" prefHeight="30.0"
                       style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-radius: 3; -fx-background-radius: 3;"
                       GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Documento:" textFill="#424242" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <TextField fx:id="txtDocumento" prefHeight="30.0" promptText="Número de documento"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 3; -fx-background-radius: 3;"
                       GridPane.columnIndex="3" GridPane.rowIndex="0" />

            <!-- Fila 2: Nombre y Correo -->
            <Label text="Nombre Completo:" textFill="#424242" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <TextField fx:id="txtNombre" prefHeight="30.0" promptText="Nombre del paciente"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 3; -fx-background-radius: 3;"
                       GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Correo:" textFill="#424242" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <TextField fx:id="txtCorreo" prefHeight="30.0" promptText="correo@ejemplo.com"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 3; -fx-background-radius: 3;"
                       GridPane.columnIndex="3" GridPane.rowIndex="1" />

            <!-- Fila 3: Teléfono y Fecha Nacimiento -->
            <Label text="Teléfono:" textFill="#424242" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <TextField fx:id="txtTelefono" prefHeight="30.0" promptText="3001234567"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 3; -fx-background-radius: 3;"
                       GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Fecha Nacimiento:" textFill="#424242" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <DatePicker fx:id="dpFechaNacimiento" prefHeight="30.0" prefWidth="220.0"
                        GridPane.columnIndex="3" GridPane.rowIndex="2" />

            <!-- Fila 4: Dirección y Género -->
            <Label text="Dirección:" textFill="#424242" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <TextField fx:id="txtDireccion" prefHeight="30.0" promptText="Dirección completa"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 3; -fx-background-radius: 3;"
                       GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Género:" textFill="#424242" GridPane.columnIndex="2" GridPane.rowIndex="3">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <ComboBox fx:id="cmbGenero" prefHeight="30.0" prefWidth="220.0" promptText="Seleccione género"
                      GridPane.columnIndex="3" GridPane.rowIndex="3" />
        </GridPane>

        <!-- BOTONES DE ACCIÓN -->
        <HBox layoutX="30.0" layoutY="235.0" spacing="10.0">
            <children>
                <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#onAgregar"
                        prefHeight="35.0" prefWidth="120.0"
                        style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"
                        text="Agregar">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="btnActualizar" mnemonicParsing="false" onAction="#onActualizar"
                        prefHeight="35.0" prefWidth="120.0"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"
                        text="Actualizar">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="btnLimpiar" mnemonicParsing="false" onAction="#onLimpiar"
                        prefHeight="35.0" prefWidth="120.0"
                        style="-fx-background-color: white; -fx-text-fill: #616161; -fx-border-color: #bdbdbd; -fx-font-weight: bold; -fx-background-radius: 4; -fx-border-radius: 4;"
                        text="Limpiar">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <Separator layoutX="30.0" layoutY="285.0" prefWidth="810.0" />

        <!-- TABLA -->
        <Label layoutX="30.0" layoutY="300.0" text="Lista de Pacientes" textFill="#424242">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <TableView fx:id="tablaPacientes" layoutX="30.0" layoutY="330.0" prefHeight="300.0" prefWidth="810.0"
                   style="-fx-border-color: #e0e0e0; -fx-border-width: 1;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colDocumento" prefWidth="100.0" text="Documento" />
                <TableColumn fx:id="colNombre" prefWidth="180.0" text="Nombre" />
                <TableColumn fx:id="colCorreo" prefWidth="150.0" text="Correo" />
                <TableColumn fx:id="colTelefono" prefWidth="100.0" text="Teléfono" />
                <TableColumn fx:id="colFechaNacimiento" prefWidth="110.0" text="F. Nacimiento" />
                <TableColumn fx:id="colGenero" prefWidth="110.0" text="Género" />
            </columns>
        </TableView>

        <!-- BOTÓN ELIMINAR -->
        <Button fx:id="btnEliminar" layoutX="720.0" layoutY="645.0" mnemonicParsing="false" onAction="#onEliminar"
                prefHeight="35.0" prefWidth="120.0"
                style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"
                text="Eliminar">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
    </children>
</AnchorPane>