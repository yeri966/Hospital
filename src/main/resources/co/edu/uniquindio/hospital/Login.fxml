<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="450.0" prefWidth="450.0"
            style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.hospital.controllers.LoginController">

    <center>
        <VBox alignment="CENTER" prefHeight="450.0" prefWidth="450.0" spacing="18.0"
              style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
            <padding>
                <Insets bottom="35.0" left="50.0" right="50.0" top="35.0" />
            </padding>

            <children>
                <!-- TÍTULO -->
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="SISTEMA HOSPITALARIO" textFill="#424242">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <Label text="Gestión de Citas Médicas" textFill="#757575">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Separator prefWidth="350.0">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Separator>

                <!-- CAMPOS DE ENTRADA -->
                <VBox spacing="12.0" prefWidth="350.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Usuario:" textFill="#424242">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtUsuario" prefHeight="32.0" promptText="Ingrese su usuario"
                                           style="-fx-background-color: white; -fx-border-color: #bdbdbd; -fx-border-radius: 4; -fx-background-radius: 4;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Contraseña:" textFill="#424242">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="txtContrasenia" prefHeight="32.0" promptText="Ingrese su contraseña"
                                               style="-fx-background-color: white; -fx-border-color: #bdbdbd; -fx-border-radius: 4; -fx-background-radius: 4;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- BOTONES -->
                <VBox spacing="8.0" prefWidth="350.0">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                    <children>
                        <Button fx:id="btnIngresar" mnemonicParsing="false" onAction="#onIngresar"
                                prefHeight="36.0" prefWidth="350.0" text="INGRESAR"
                                style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>

                        <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#onSalir"
                                prefHeight="36.0" prefWidth="350.0" text="SALIR"
                                style="-fx-background-color: white; -fx-text-fill: #616161; -fx-border-color: #bdbdbd; -fx-font-weight: bold; -fx-background-radius: 4; -fx-border-radius: 4; -fx-cursor: hand;">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>

                <Separator prefWidth="350.0">
                    <VBox.margin>
                        <Insets bottom="3.0" top="3.0" />
                    </VBox.margin>
                </Separator>

                <Hyperlink fx:id="hylRegistrarse" onAction="#onRegistrarse" text="Registrarse como Médico"
                           textFill="#757575">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Hyperlink>
            </children>
        </VBox>
    </center>
</BorderPane>